{
  "name": "@classmatejs/solid",
  "description": "Solid adapter for Classmate component factories.",
  "version": "0.2.0",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
    "repository": {
    "type": "git",
    "url": "git+https://github.com/richard-unterberg/classmatejs.git"
  },
  "bugs": {
    "url": "https://github.com/richard-unterberg/classmatejs/issues"
  },
  "homepage": "https://github.com/richard-unterberg/classmatejs/tree/master/packages/solid#readme",
  "keywords": [
    "solid",
    "solidjs",
    "classmate",
    "typescript",
    "dynamic-classnames",
    "dynamic-styles",
    "dynamic-variants",
    "css",
    "css-in-js",
    "utility-first",
    "utility-first-classnames",
    "classname",
    "classname-variants",
    "frontend",
    "ssr",
    "tailwind",
    "unocss",
    "tailwind-merge"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs.js",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsup",
    "test": "vitest run --config vitest.config.ts",
    "test:watch": "vitest --config vitest.config.ts",
    "typecheck": "tsc --noEmit",
    "========= Build": "",
    "package": "npm run build && npm publish --access public"
  },
  "peerDependencies": {
    "solid-js": ">=1.8.0"
  },
  "dependencies": {
    "tailwind-merge": "^3.3.0"
  },
  "devDependencies": {
    "@solidjs/testing-library": "^0.8.10",
    "@testing-library/jest-dom": "^6.6.3",
    "solid-js": "^1.9.10",
    "tsup": "^8.3.0",
    "typescript": "^5.7.2",
    "vite-plugin-solid": "^2.10.2",
    "vitest": "^4.0.13"
  }
}
