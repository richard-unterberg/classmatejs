{
  "name": "classmatejs",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build -w @classmatejs/react && npm run build -w @classmatejs/solid",
    "test": "npm run build && npm run test:src -w @classmatejs/react && npm run test -w @classmatejs/solid",
    "lint": "npm run lint -ws --if-present",
    "clean": "npm run clean -ws --if-present",
    "typecheck:all": "npm run typecheck -ws --if-present",
    "publish:classmate": "npm run package -w @classmatejs/react",
    "publish:solid": "npm run package -w @classmatejs/solid",
    "publish:all": "npm run publish:classmate && npm run publish:solid",
    "docs": "npm run dev -w docs",
    "docs:build": "npm run build -w docs",
    "docs:preview": "npm run preview -w docs"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "typescript": "^5.9.3"
  },
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/richard-unterberg/classmatejs.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/richard-unterberg/classmatejs/issues"
  },
  "homepage": "https://github.com/richard-unterberg/classmatejs#readme"
}
